{
  "compilerOptions": {
    "target": "es2017",                          
    "module": "commonjs",                    
    "lib": ["es6"],                     
    "allowJs": false,
    "outDir": "build",                          
    "rootDir": "src",
    "strict": true,         
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,    
    "typeRoots": [
      "./src/custom_typings",
      "./node_modules/@types"
    ],         
  },
  "exclude": ["node_modules", "build"]

}